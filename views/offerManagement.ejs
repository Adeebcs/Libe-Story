<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - Offer & Coupon Management</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f7f9fc; 
        }
        .header {
            background-color: #1E90FF; 
            color: white;
            padding: 10px;
            text-align: center;
        }
        .table {
            border: 2px solid #1E90FF; 
        }
        .thead {
            background-color: #1E90FF; /* New background color */
            color: white; /* Text color */
        }
        .thead th {
            border-color: #1E90FF; /* Optional: match border color */
        }
        .btn-primary {
            background-color: #1E90FF; 
            border: none;
        }
        .btn-primary:hover {
            background-color: #1E90FF; 
        }
        .btn-danger {
            background-color: #dc3545; 
            border: none;
        }
        .btn-danger:hover {
            background-color: #c82333; 
        }
    </style>
</head>

<body>
    <%- include('partials/header') %>
<div class="container mt-4">
    <h1 class="text-center mb-4">Offers & Coupons</h1>
    
   
    <div class="mb-4 text-center">
        <a href="/admin/offers/create" class="btn btn-primary mr-2">Create New Offer</a>
        <a href="/admin/coupons/create" class="btn btn-primary">Create New Coupon</a>
    </div>

    
    <h2>Offers</h2>
<table class="table table-bordered">
    <thead class="thead">
        <tr>
            <th>Offer ID</th>
            <th>Type</th>
            <th>Discount (%)</th>
            <th>Valid From</th>
            <th>Valid Until</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% offers.forEach(offer => { %>
            <tr>
                <td><%= offer._id %></td>
                <td><%= offer.type %></td>
                <td><%= offer.discountPercentage %></td>
                <td><%= offer.validFrom.toDateString() %></td>
                <td><%= offer.validUntil.toDateString() %></td>
                <td>
                    <form action="/admin/offers/delete/<%= offer._id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this offer?');">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        <% }); %>
    </tbody>
</table>


    <h2>Coupons</h2>
<table class="table table-bordered">
    <thead class="thead">
        <tr>
            <th>Coupon Code</th>
            <th>Discount (%)</th>
            <th>Valid From</th>
            <th>Valid Until</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% coupons.forEach(coupon => { %>
            <tr>
                <td><%= coupon.code %></td>
                <td><%= coupon.discountPercentage %></td>
                <td><%= coupon.validFrom.toDateString() %></td>
                <td><%= coupon.validUntil.toDateString() %></td>
                <td>
                    <form action="/admin/coupons/delete/<%= coupon._id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this coupon?');">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        <% }); %>
    </tbody>
</table>
</div>

</body>
</html>
